{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block section_content %}
    <div class="panel-heading">
     <h1> Bulletin de {{ eleve.getFirstName() }} {{ eleve.getLastName() }}</h1>
    </div>
    <div class="panel-body">
        <form action="" method="POST" {{ form_enctype(form) }} autocomplete="off">
            <table class="table">
                <thead><tr>
                    <th>Matière</th>
                    <th>Point</th>
                    <th>Total</th>
                    <th>Présence</th>
                    <th>Comportement</th>
                </tr></thead>
                <tbody>
                {% for pemp in form.pemps %}
                    <tr>
                        <td>{{ form_widget(pemp.matiere) }}</td>
                        <td>{{ form_widget(pemp.point) }}</td>
                        <td>{{ form_widget(pemp.total) }}</td>
                        <td>{{ form_widget(pemp.presence) }}</td>
                        <td>{{ form_widget(pemp.comportement) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <table>
                {% for pemd in form.pemds %}
                <tr><td>{{ form_widget(pemd.divers) }}</td><td>{{ form_widget(pemd.point) }}</td><td>{{ form_widget(pemd.total) }}</td></tr>
                {% endfor %}
            </table>
            {{ form_widget(form.save) }}
        </form>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
            src='{{ asset('bundles/laurentbulletin/js/bulletinEdit.js') }}'
            type="text/javascript">
    </script>
{% endblock %}